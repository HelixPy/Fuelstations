<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fuel_stations.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fuel_stations"
    Shell.FlyoutBehavior="Disabled"
    Title="Fuel_stations">


    <TabBar>
        <ShellContent
        Title="Spare Parts"
        ContentTemplate="{DataTemplate local:AutoShop}"
        Route="AutoShop" 
        Icon="dotnet_bot.png"
        />

        <ShellContent
        Title="Tips"
        ContentTemplate="{DataTemplate local:Tips}"
        Route="Tips" 
        Icon="dotnet_bot.png"
        />


        <ShellContent
        Title="Stations"
        ContentTemplate="{DataTemplate local:StationsPage}"
        Route="StationsPage" 
        Icon="dotnet_bot.png"
        />

        <ShellContent
        Title="Favorites"
        ContentTemplate="{DataTemplate local:FavoriteStations}"
        Route="FavoriteStations" 
        Icon="dotnet_bot.png"
        />

        <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:Profile}"
        Route="Profile" 
        Icon="dotnet_bot.png"
        />

    </TabBar>
    
</Shell>
